vector<vi> adj;
void add_edge(vector<vi> &a, int u, int v, bool dir = 0)
{
    a[u].push_back(v);
    if(!dir)
        a[v].push_back(u);
}

void clearAll(int n)
{
	adj.clear();
	adj.resize(n + 1);
}
]]></content>
