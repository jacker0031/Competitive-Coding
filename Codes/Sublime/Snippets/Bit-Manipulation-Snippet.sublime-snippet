/***
   * __builtin_clz(num) --> clz = count leading zeroâ€™s
   * __builtin_ctz(num) --> ctz = count trailing zeros
   * inline int RightOne(int x){return (__builtin_ctz(x)+1);}
   * inline int LeftOne(int x){return (__builtin_clz(INT_MAX) - __builtin_clz(x)+1);}
***/

void setBit(int &x, int pos){x |= ( 1LL << pos);}
void resetBit(int &x, int pos){x &= ~(1LL << pos);}
bool atpos(int x, int pos){return ((x & (1LL << pos)) != 0);}
int pow2(int n){return (1LL << n);}

const int num_to_bits[16]={0,1,1,2,1,2,2,3,1,2,2,3,2,3,3,4};
int popcount(int num)
{
    int nibble, ans=0;
    do
    {
        nibble=num&0xf;
        ans+=num_to_bits[nibble];
        num>>=4;
    }while(num);

    return ans;
}
